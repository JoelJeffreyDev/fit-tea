/****************************************************
* highforge-responsive.css.liquid
* 
* Responsive changes for the main Highforge CSS file
****************************************************/

@media screen and (max-width: 1026px) {
	.sidebar-menu-wrapper
	{
		display: none;
	}

	.main-content-wrapper
	{
		float: none;
		width: 100%;
		border-left: none;
	}

	.enter-to-win-container
	{
		display: none;
	}

	.page-top-banner .button
	{
		margin: 5px;
		padding: 10px;
	}

	.logo
	{
		border-bottom: none;
	}

	.mobile-menu-container
	{
		display: block;
	}

	.reviews-header-container
	{
		margin-top: 20px;
	}

	.reviews-header-link
	{
		border-top: 1px solid #CCC;
	}

	.footer-wrapper .row .span4
	{
		width: 46%;
		margin: 0 2%;
	}

	.footer-wrapper .footer-menu
	{
		display: none;
	}

	.home-slider
	{
		height: 282px;
	}

	#blog .span9
	{
		width: 98%;
		margin: 0 1%;
	}

	.faq-topic-title
	{
		padding-top: 50px;
	}
}

@media screen and (max-width: 797px){
	.instagram-embed
	{
		height: 640px;
	}

	.home-slider
	{
		height: 215px;
	}
}

@media screen and (max-width: 629px){
	.span9,
	.span8,
	.span6,
	.span4,
	.footer-wrapper .row .span4
	{
		width: 98%;
		margin: 0 1%;
	}

	.span6.home-detox-box
	{
		float: left;
		width: 46%;
		margin: 0 1%;
	}

	.page-top-banner .button
	{
		margin: 5px 40px;
	}

	.mobile-menu
	{
		width: 100%;
	}

	.youtube-embed
	{
		height: 309px;
	}

	.home-product-block h2
	{
		margin-top: 20px;
	}

	.image.featured
	{
		display: block;
		width: 100%;
		max-width: 300px;
		margin: 0 auto;
	}

	.home-slider
	{
		display: none;
	}

	.home-product-block-last
	{
		border-top: none;
		margin-top: 0;
	}

	.shop-page .product
	{
		margin-bottom: 40px;
	}

	.contact-us-email-link-container > a 
	{
		font-size: 26px;
	}
}


@media screen and (max-width: 509px){

	.instagram-embed
	{
		height: 412px;
	}

	.youtube-embed
	{
		height: 238px;
	}

	.sales-block-image
	{
		padding: 0;
	}

	.block-sales-2-container li
	{
		font-size: 14px;
	}
}

@media screen and (max-width: 399px) {
	.wrapper
	{
		width: 290px;
	}

	.logo img
	{
		width: 100%;
	}

	.span12,
	.span9,
	.span8,
	.span6,
	.span4,
	.footer-wrapper .row .span4
	{
		width: 96%;
		margin: 0 2%;
	}

	.youtube-embed
	{
		height: 214px;
	}

	.home .block-tea-product-description-container h2
	{
		margin-top: 20px;
		font-size: 24px;
	}

	.block-sales-1-container h2,
	.block-sales-2-container h2
	{
		font-size: 18px;
	}
}

@media screen and (min-width: 600px) {
 	.product .image {
     	min-height: 323px;
        height: 323px;
    }
	.product .image a {
      position: relative;
      top: 50%;
	  -webkit-transform: translateY(-50%);
	  -ms-transform: translateY(-50%);
	  transform: translateY(-50%);
    } 
}

@media screen and (min-width: 768px) {
 	.product .image {
     	min-height: 444px; 
        height: 444px;
    }
 
}