	* WIN
	****************************************************/
		.contest-form
		{
			margin-bottom: 20px;
		}

		.contest-form tr td
		{
			border: none;
		}

		.contest-form-inputs-row .contest-form-inputs-cell-email
		{
			width: 70%;
		}

		.contest-form-inputs-row .contest-form-inputs-cell-email input
		{
			display: block;
			width: 100%;
			height: 34px;
		}

		.contest-form-inputs-row .contest-form-inputs-cell-submit
		{
			width: 30%;
		}

		.contest-form .button
		{
			height: auto;
			border: none;
			padding: 10px 30px;
			font-size: 16px;
		}