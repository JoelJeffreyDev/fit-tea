		{
			margin: 20px 0;
		}

		.video-review-button
		{
			display: block;
			opacity: 1;
			padding: 10px 20px;
			color: #FFF;
			background: #599442;
			-webkit-transition: all 0.25s linear;
			-moz-transition: all 0.25s linear;
			-o-transition: all 0.25s linear;
			transition: all 0.25s linear;
		}

		.video-review-button:hover,
		.video-review-button:focus
		{
			opacity: 1;
			color: #FFF;
			background: #000;
		}

		.video-review-button-previous
		{
			float: left;
		}

		.video-review-button-next
		{
			float: right;
		}

		.pagination li a
		{
			-webkit-transition: all 0.25s linear;
			-moz-transition: all 0.25s linear;
			-o-transition: all 0.25s linear;
			transition: all 0.25s linear;
		}

		.pagination li a:hover,
		.pagination li a:focus
		{
			background: #000;
		}

	/****************************************************
	* TESTIMONIALS
	****************************************************/
		.testimonial-container
		{
			border: 3px solid #599442;
			margin-bottom: 20px;
		}

		.testimonial-container blockquote
		{
			margin-bottom: 0;
			font-size: 16px;
			color: #000;
			background: #FFF;
		}

