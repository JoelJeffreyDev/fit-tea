<div id="blog">
  
  <div class="row title">
    <div class="span12">
      <h1 class="p25 page-title">{{ blog.title }}</h1>
    </div> 
  </div> 
    
  <!-- Begin content -->
  <div class="row">
    
    {% paginate blog.articles by 5 %}
    
    <div class="span9 articles">
      {% for article in blog.articles %}
      <div class="article clearfix">
        <h1><a href="{{ article.url }}">{{ article.title }}</a> <span class="date" style="display: block;">{{ article.published_at | date: "%B %d %Y" }}</span></h1>
        {{ article.excerpt_or_content }}
      </div>
      {% unless forloop.last %}
      <hr class="divider" />
      {% endunless %}
      {% endfor %}
      {% include 'pagination' %}
    </div>
    
    {% endpaginate %}
    
  </div>
  <!-- End content -->
  
</div>